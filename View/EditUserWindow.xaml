<Window x:Class="ManageStaffDbApp.View.EditUserWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ManageStaffDbApp.View"
        mc:Ignorable="d"
        Title="EditUserWindow" Height="400" Width="300" WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0"
                    Orientation="Vertical"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Center">
            <TextBlock Text="New name"/>
            <TextBox Text=""/>
            <TextBlock Text="New surname"/>
            <TextBox Text=""/>
            <TextBlock Text="New phone"/>
            <TextBox Text=""/>
            <TextBlock Text="New position"/>
            <ComboBox/>
        </StackPanel>
        <Button Grid.Row="1"
                Content="Edit staff"/>
    </Grid>
</Window>
